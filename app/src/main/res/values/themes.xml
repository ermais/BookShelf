<resources>
    <!-- Base application theme. -->
    <style name="Theme.BookShelf" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/orange</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/primaryDark</item>
        <item name="colorOutline">@color/secondary</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/primaryDark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorButtonNormal">@color/primary</item>
    </style>

    <style name="Theme.BookShelf.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BookShelf.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BookShelf.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
